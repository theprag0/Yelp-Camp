<%- include("../partials/header") %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%=campground.name%></h1>
        </div>
    <div class="col-xs-12 col-md-6 col-lg-4 mb-4">
        <form action="/campgrounds/<%=campground.slug%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Name of the Campground:</label>
                <input class="form-control" type="text" name="data[name]" value="<%=campground.name%>" required>
            </div>
            <div class="form-group">
                <label>Price:</label>
                <input class="form-control" type="number" name="data[price]" value="<%=campground.price%>" min="0.01" step="0.01" required>
                <p><em>*Please enter the price/night in USD</em></p>
            </div>
            <div class="form-group">
                <label>Upload Campground Image</label>
                <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <!-- <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" >
            </div> -->
            <div class="form-group">
                <label>Description:</label>
            <textarea name="data[description]" class="form-control" cols="30" rows="10" required><%=campground.description%></textarea>
            </div>  
            <div class="form-group">
             <input type="submit" class="btn btn-primary btn-lg btn-block">
            </div>  
        </form>
    <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>
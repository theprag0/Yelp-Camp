<%- include("../partials/header") %>
 <div class="row justify-content-center">
     <div class="col-md-12 text-center my-3">
        <h1>Create New campground</h1>
     </div>
    <div class="col-xs-12 mb-6">
        <form class="form-signin" action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="campName">Camground Name:</label>
                <input class="form-control" id="campName" type="text" name="campground[name]" placeholder="name" required>
            </div>
            <div class="form-group">
                <label for="campPrice">Price</label>
                <input class="form-control" id="campPrice" type="number" name="campground[price]" placeholder="Enter the price/night" min="0.01" step="0.01" required>
                <small id="formHelp" class="form-text text-muted">Note: All prices must be entered in USD</small>
            </div>
            <div class="form-group">
                <label for="campImage">Upload your Campground image:</label>
                <input class="form-control" id="campImage" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <!-- <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Eg: Yosemite National Park, CA">
            </div> -->
            <div class="form-group">
                <label for="campDesc">Description:</label>
                <textarea name="campground[description]" id="campDesc" class="form-control" cols="30" rows="10" placeholder="description" required></textarea>
            </div>  
            <div class="form-group">
             <input type="submit" class="btn btn-primary btn-lg btn-block">
            </div>  
        </form>
    <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>